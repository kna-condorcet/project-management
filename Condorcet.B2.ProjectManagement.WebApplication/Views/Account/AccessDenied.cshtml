@{
    ViewData["Title"] = "Accès Refusé";
}

<div class="text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <i class="bi bi-lock-fill text-danger" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h1 class="display-4 text-danger mb-3">Accès Refusé</h1>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p class="lead mb-4">
                            Votre compte ne dispose pas des droits nécessaires pour accéder à cette page.
                        </p>
                        
                        <hr class="my-4">
                        
                        <p class="mb-4">
                            Si vous pensez devoir avoir accès à cette page, veuillez contacter l'administrateur 
                            ou utiliser un compte disposant des privilèges appropriés.
                        </p>
                    }
                    else
                    {
                        <p class="lead mb-4">
                            Cette page nécessite une authentification.
                        </p>
                        
                        <hr class="my-4">
                        
                        <p class="mb-4">
                            Veuillez vous connecter pour accéder à cette ressource. Si vous étiez déjà 
                            connecté, votre session a peut-être expiré.
                        </p>
                    }
                    
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-house"></i> Accueil
                        </a>
                        
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter
                            </a>
                        }
                    </div>
                </div>
                
                <div class="card-footer text-muted">
                    <small>
                        Référence: @ViewData["ReturnUrl"]
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>